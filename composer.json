{
    "name": "mmoreram/symfony-bundle-dependencies",
    "description": "Dependencies resolver for Symfony Bundles",
    "keywords": [
        "symfony",
        "dependencies",
        "bundle"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        }
    ],
    "require": {
        "php": "^5.4|^7.0",

        "symfony/http-kernel": "^2.2|^3.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "1.4.2",
        "mmoreram/php-formatter": "1.1.0",
        "phpunit/phpunit": "4.5.0"
    },
    "autoload": {
        "psr-4": {
            "Mmoreram\\SymfonyBundleDependencies\\": ""
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "check-style": [
            "php-cs-fixer fix --config-file=.php_cs",
            "php-formatter f:h:f .",
            "php-formatter f:u:s ."
        ],
        "test": "phpunit"
    }
}
